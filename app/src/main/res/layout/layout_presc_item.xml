<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/presc_height"
    android:layout_height="@dimen/presc_height"
    android:layout_marginRight="@dimen/detail_padding"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/file"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/detail_padding"
        android:layout_marginRight="@dimen/margin_button"
        android:layout_width="match_parent"
        android:src="@drawable/file"
        android:layout_height="@dimen/presc_image_height" />
    <ImageView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_cross"/>

    <TextView
        android:id="@+id/title"
        android:layout_below="@+id/file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:text=""/>
</RelativeLayout>